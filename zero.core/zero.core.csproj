<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>preview</LangVersion>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <AnalysisLevel>preview</AnalysisLevel>    
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <DefineConstants>TRACE;GOOGLE_PROTOBUF_SUPPORT_SYSTEM_MEMORY; SAFE_RELEASE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;SAFE_RELEASE; GOOGLE_PROTOBUF_SUPPORT_SYSTEM_MEMORY</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="com\**" />
    <EmbeddedResource Remove="com\**" />
    <None Remove="com\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
    <None Include="..\.gitignore" Link=".gitignore" />
    <None Include="..\readme.md" Link="readme.md" />
  </ItemGroup>

  <ItemGroup>    
    <PackageReference Include="CassandraCSharpDriver" Version="3.17.1-alpha" />    
    <PackageReference Include="Google.Protobuf" Version="3.19.1" />
	<PackageReference Include="MathNet.Numerics" Version="5.0.0-alpha02" />
	<PackageReference Include="Microsoft.AspNetCore.Mvc.Abstractions" Version="2.2.0" />
	<PackageReference Include="Microsoft.Extensions.Caching.Redis" Version="2.2.0" />    
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />        
    <PackageReference Include="NLog" Version="5.0.0-preview.3" />        
    <PackageReference Include="System.Text.Json" Version="6.0.0" />    
  </ItemGroup>

  <ItemGroup>    
    <Reference Include="NLog">
      <HintPath>..\..\..\..\.nuget\packages\nlog\4.5.0-rc03\lib\netstandard2.0\NLog.dll</HintPath>
    </Reference>    
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\deps\tangle.net\Tangle.Net.Standard\Tangle.Net.Standard\Tangle.Net.Standard.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="api\commands\" />
  </ItemGroup>

</Project>
