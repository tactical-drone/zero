<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>preview</LangVersion>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <AnalysisLevel>preview</AnalysisLevel>    
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <DefineConstants>TRACE;GOOGLE_PROTOBUF_SUPPORT_SYSTEM_MEMORY; SAFE_RELEASE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;SAFE_RELEASE; GOOGLE_PROTOBUF_SUPPORT_SYSTEM_MEMORY</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="api\**" />
    <Compile Remove="com\**" />
    <EmbeddedResource Remove="api\**" />
    <EmbeddedResource Remove="com\**" />
    <None Remove="api\**" />
    <None Remove="com\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
    <None Include="..\.gitignore" Link=".gitignore" />
    <None Include="..\readme.md" Link="readme.md" />
  </ItemGroup>

  <ItemGroup>    
	  <PackageReference Include="Microsoft.CSharp" Version="4.0.1" />
    <PackageReference Include="NLog" Version="5.0.0-preview.3" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0" />        
  </ItemGroup>

  <ItemGroup>    
    <Reference Include="NLog">
      <HintPath>..\..\..\..\.nuget\packages\nlog\4.5.0-rc03\lib\netstandard2.0\NLog.dll</HintPath>
    </Reference>    
  </ItemGroup>

	<ItemGroup>
    <Folder Include="patterns\cmdline\" />
  </ItemGroup>

</Project>
